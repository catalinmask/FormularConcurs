@model ElegantWebFormApp.Models.User
@{
    ViewData["Title"] = "Formular Elegant";
}
<!-- Includere Bootstrap 5 CSS pentru un design modern -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" /> <!-- Font-awesome pentru iconițe -->
<!-- Secțiune principală cu formularul de înregistrare -->
<div class="container mt-5">
    <h2 class="mb-4 text-center text-primary">Formular de Înregistrare</h2>

    @if (ViewBag.Success != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Succes!</strong> @ViewBag.Success
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Formularul propriu-zis -->
    <form asp-controller="Home" asp-action="Index" method="post" class="shadow-lg p-4 rounded bg-light">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="FullName" class="form-label fs-5 text-muted"></label>
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-user"></i></span>
                <input asp-for="FullName" class="form-control" placeholder="Introdu numele complet" />
            </div>
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label fs-5 text-muted"></label>
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                <input asp-for="Email" class="form-control" placeholder="Introdu adresa de email" />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PhoneNumber" class="form-label fs-5 text-muted"></label>
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-phone"></i></span>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Introdu numărul de telefon" />
            </div>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success w-100 py-2 mt-3">Trimite</button>
    </form>
</div>

<!-- Includere Bootstrap JS pentru componente interactive -->
<script src="https://cdn.jsdelivr.net/npm/popperjs__core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}